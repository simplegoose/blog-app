<main class="post_form">
  <h1>New Post</h1>
  <% flash.each do |type, msg| %>
    <div class="alert">
      <% if type == 'error' then %>
        <div class="alert_inner alert-danger">
          <%= msg %>
        </div>
      <% end %>
      <% if type == 'success' then %>
        <div class="alert_inner alert-success">
          <%= msg %>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: post, url: "/users/#{@user.id}/posts", method: :post, local: true do |form| %>
    <div class="form_group">
      <%= form.label :title, "Title" %>
      <%= form.text_field :title, :placeholder => "Enter post title" %>
    </div>
    <div class="form_group">
      <%= form.label :text, "Text" %><br/>
      <%= form.text_area :text, :maxlength => 250, :placeholder => "Enter post content (Max length is 250 characters)" %>
    </div>

    <div>
      <%= form.submit "Post", disable_with: 'Submiting...' %>
    </div>
  <% end %>
</main>