<div class="users">
  <% flash.each do |type, msg| %>
    <div class="alert">
      <% if type == 'error' then %>
        <div class="alert_inner alert-danger">
          <%= msg %>
        </div>
      <% end %>
      <% if type == 'success' then %>
        <div class="alert_inner alert-success">
          <%= msg %>
        </div>
      <% end %>
    </div>
  <% end %>
  <h1>Users</h1>
  <% @users.each do |user| %>
    <%= link_to "/users/#{user.id}", :class => "text-decoration-none" do %>
      <div class="user_info_wrapper">
        <%= image_tag user.photo, :class => 'user_avatar' %>
        <div class="user_details">
          <p><%= user.name %></p>
          <span>Number of posts: <%= user.post_counter %></span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

