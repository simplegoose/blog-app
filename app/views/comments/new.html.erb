<main class="post_form">
  <h1>New Comment</h1>
  <% flash.each do |type, msg| %>
    <div class="alert">
      <% if type == 'error' then %>
        <div class="alert_inner alert-danger">
          <%= msg %>
        </div>
      <% end %>
      <% if type == 'success' then %>
        <div class="alert_inner alert-success">
          <%= msg %>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: comment, url: comment_create_path, method: :post, local: true do |form| %>
    <div class="form_group">
      <%= form.label :text, "Text" %><br/>
      <%= form.text_area :text, :maxlength => 250, :placeholder => "Enter comment content" %>
    </div>
    <%= form.hidden_field :post_id, value: @post.id %>
    <div>
      <%= form.submit "Post", disable_with: 'Submiting...' %>
    </div>
  <% end %>
</main>